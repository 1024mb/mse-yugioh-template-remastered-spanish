
############################################################## Card fields
############################# Background stuff
card field:
	type: choice
	name: forma
	save value: false
	show statistics: false
	editable: false
	choice: normal
	choice: péndulo
	script:
		stylesheet   # indicate that this value should be updated when the stylesheet changes
		card_forma() # determined by the style
card field:
	type: choice
	name: tipo de carta
	choice:
		name: monstruo normal
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de efecto
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de ritual
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de sincronía
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de sincronía oscura
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de fusión
		enabled: { card.forma == "normal" }
	choice:
		name: ficha de monstruo
		enabled: { card.forma == "normal" }
	choice:
		name: obelisco
		enabled: { card.forma == "normal" }
	choice:
		name: slifer
		enabled: { card.forma == "normal" }
	choice:
		name: ra
		enabled: { card.forma == "normal" }
	choice:
		name: dragones legendarios
		enabled: { card.forma == "normal" }
	choice:
		name: carta mágica
		enabled: { card.forma == "normal" }
	choice:
		name: carta de trampa
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo xyz
		enabled: { card.forma == "normal" }
	choice:
		name: monstruo de péndulo
		enabled: { card.forma == "péndulo" }
	default: tipo_de_carta()
	choice colors cardlist:
		monstruo normal:	   rgb(120,18,0)
		monstruo de efecto:	   rgb(120,18,0)
		monstruo de ritual:	   rgb(26,26,26)
		monstruo de sincronía:   rgb(26,26,26)
		monstruo de sincronía oscura:   rgb(26,26,26)
		monstruo de fusión:	   rgb(26,26,26)
		ficha de monstruo:	   rgb(120,18,0)
		obelisco:	   rgb(26,26,26)
		slifer:		   rgb(26,26,26)
		ra:		   rgb(26,26,26)
		dragones legendarios: rgb(26,26,26)
		carta mágica:	   rgb(80,80,80)
		carta de trampa:	   rgb(30,110,0)
		monstruo xyz: rgb(26,26,26)
card field:
	type: choice
	name: láminas
	editable: false
	choice: ninguno
	choice: imagen holográfica
	choice: imagen holográfica secreta
	choice: imagen holográfica paralela
	choice: imagen holográfica de tec. dorada
	default: lámina()
############################# Name line
card field:
	type: text
	name: nombre
	identifying: true
	show statistics: false
	card list visible: true
	card list column: 1
card field:
	type: choice
	name: atributo
	choice: ninguno
	choice: tierra
	choice: agua
	choice: fuego
	choice: viento
	choice: luz
	choice: oscuridad
	choice: divinidad
	choice: mágica
	choice: trampa
	default: atributo()
	card list visible: true
	card list column: 2
card field:
	type: text
	name: nivel
	description: `=] * = estrella, % = continuo, ! = contador, + = equipo, & = campo, $ = rápido, # = ritual
	script: level_filter(value)

############################# Image
card field:
	type: image
	name: ilustración
	show statistics: false
############################# Card type
# Keep type1, type2, and separator fields for backwards compatibility until two or three versions after 0.3.8.
card field:
	type: text
	name: tipo1
	script: monster_type_filter(value)
	default: "   "
	editable: false
	show statistics: false
card field:
	type: text
	name: tipo2
	script: card_class_filter(value)
	editable: false
	show statistics: false
card field:
	type: text
	name: separador
	script: " / "
	editable: false
	save value: false
	show statistics: false
# These are the new type fields.
card field:
	type: text
	name: tipo 1
	script: monster_type_filter(value)
	default: card.tipo1 # Remove when card.type1 is removed.
card field:
	type: text
	name: tipo 2
	script: card_class_filter(value)
	default: split_text(match:" / ", card.tipo2).0 # Remove when card.type2 is removed.
card field:
	type: text
	name: tipo 3
	script: card_class_filter(value)
	default: if contains(card.tipo2, match:" / ") then split_text(match:" / ", card.tipo2).1 else "" # Remove when card.type2 is removed.
card field:
	type: text
	name: tipo de monstruo
	script:
		# Either just monster, monster / type1
		combined_editor(
			field1: card.tipo_1,
			separator1: " / ",
			field2: card.tipo_2,
			separator2: " / ",
			field3: card.tipo_3,
			soft_before_empty: true,
			hide_when_empty: true
		)
	card list visible: true
	card list column: 3
	show statistics: false
############################# Edition and Card ID
card field:
	type: text
	name: número
	script:
		set.código
		+ "-" +
		set.idioma +
		if pos_of_card()<=9 then "00" + pos_of_card(value) else
		if pos_of_card()>=9 and pos_of_card()<=99 then "0" + pos_of_card(value) else
		"" + pos_of_card(value)
	card list visible: true
	card list column: 6
	card list width: 55
	card list name: #
	editable: false
	save value: false
	show statistics: false
card field:
	type: text
	name: edición
	default: set.edición
	show statistics: false
############################# Text box
card field:
	type: text
	name: reglas
	script: text_filter(value)
	editable: false
	show statistics: false
card field:
	type: text
	name: descripción
	multi line: true
	save value: true
	show statistics: false
	script:
		if nm_ext_querry(value) then flavor_text_filter(value)
		else text_filter(value)
	default: card.reglas
############################# Attack/Defense
card field:
	type: text
	name: ataque
	save value: true
	script: a_and_d_filter(value)
	card list visible: true
	card list column: 4
	card list width: 33
	card list name: ATK
card field:
	type: text
	name: defensa
	save value: true
	script: a_and_d_filter(value)
	card list visible: true
	card list column: 5
	card list width: 33
	card list name: DEF
